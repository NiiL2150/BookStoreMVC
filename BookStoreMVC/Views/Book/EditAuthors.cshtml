@{
    ViewData["Title"] = Model.Book.Title;
}
@model EditAuthorsViewModel

<div class="row">
    <a href="@Url.Action("EditBook", "Book", new {id = Model.Book.Id})" class="btn btn-secondary">Back</a>
    <h1>@Model.Book.Title</h1>
    <h2>Book authors:</h2>
    @foreach(var item in Model.BookAuthors)
    {
        <div class="card col col-12 col-md-6 col-lg-4 col-xl-3 p-1">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a class="btn btn-primary" href="@Url.Action("Author", "Author", new {id=item.Id})">View more</a>
                <a href="@Url.Action("DeleteAuthor", "Book", new {id = Model.Book.Id, authorId = item.Id})" class="btn btn-danger">Delete author</a>
                <br>
            </div>
        </div>
    }
    <br />
    <hr />
    <br />
    <h2>Other authors:</h2>
    @foreach(var item in Model.NonAuthors)
    {
        <div class="card col col-12 col-md-6 col-lg-4 col-xl-3 p-1">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a class="btn btn-primary" href="@Url.Action("Author", "Author", new {id=item.Id})">View more</a>
                <a href="@Url.Action("AddAuthor", "Book", new {id = Model.Book.Id, authorId = item.Id})" class="btn btn-secondary">Add author</a>
                <br>
            </div>
        </div>
    }
</div>