@{
    ViewData["Title"] = "Authors";
}
@model AllAuthorsViewModel

<style>
div{
    overflow: hidden;
}
</style>

<div class="row">
    <a class="btn btn-primary" href="@Url.Action("AddAuthor", "Author")">Add author</a>
    @if(Model.Count == 0){
        <h3>No authors were found</h3>
    }
    else
    {
        @if(Model.Count == 1)
        {
            <h3>1 author was found</h3>
        }
        else
        {
            <h3>@Model.Count authors were found</h3>
        }
        @foreach(var item in Model.Items)
    {
         <div class="card col col-12 col-md-6 col-lg-4 col-xl-3 p-1">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a class="btn btn-primary" href="@Url.Action("Author", "Author", new {id=item.Id})">View more</a>
                <a class="btn btn-secondary" href="@Url.Action("BookAuthor", "Book", new {id=item.Id})">View books</a>
                <a href="@Url.Action("DeleteAuthor", "Author", new {id = item.Id})" class="btn btn-danger">Delete author</a>
                <br>
            </div>
        </div>
    }
    }
</div>
